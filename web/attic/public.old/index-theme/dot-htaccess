#
# Apaxy by @adamwhitcroft
# Very small modifications for the Weirauch TF Research Lab by @ernstki.
#
# For a full breakdown of the mod_autoindex module:
# http://apache.org/docs/2.2/mod/mod_autoindex.html
#

	# ENABLE INDEXING
	Options +Indexes

	# INDEX OPTIONS
	IndexOptions +Charset=UTF-8 +FancyIndexing +IconsAreLinks +IgnoreCase +FoldersFirst +XHTML +HTMLTable +SuppressRules +NameWidth=* +DescriptionWidth=*
    #+SuppressDescription

    AddDescription "MD5 checksums for archive files" MD5SUMS
    AddDescription "publication supplemental tables" *suppl*.zip
    AddDescription "data as tab-separated values" *.tsv
    AddDescription "data as an HTML table fragment" *.html
    AddDescription "database build; CRLF line ends" *build*.zip
    AddDescription "database build; LF line ends" *build*.tar.gz
    AddDescription "data as SQLite 3 database" *.sqlite*

	# HIDE PARTS OF THE THEME (config.json, footer.md, etc.)
    # By some quirk of Apache's mod_autoindex, READMEs are automatically hidden
	IndexIgnore .htaccess Makefile *.html footer.md *.in *.json abstract.txt

#
# GENERAL ICONS (BLANK, DIRECTORY, PARENT DIRECTORY)
#

#
# Replace {FOLDERNAME} with your directory URL eg:
# If your directory is http://mywebsite.com/share/
# you would change to:
#
# AddIcon /sharetheme/icons/blank.png ^^BLANKICON^^
#

	AddIcon ../index-theme/icons/blank.png ^^BLANKICON^^
	AddIcon ../index-theme/icons/folder.png ^^DIRECTORY^^
	AddIcon ../index-theme/icons/folder-home.png ..

#
# EXTENSION SPECIFIC ICONS
#

	AddIcon ../index-theme/icons/archive.png .tar.bz2 .tar.xz .tar.gz
	AddIcon ../index-theme/icons/audio.png .aif .iff .m3u .m4a .mid .mp3 .mpa .ra .wav .wma .f4a .f4b .oga .ogg
	AddIcon ../index-theme/icons/bin.png .bin
	AddIcon ../index-theme/icons/c.png .c
	AddIcon ../index-theme/icons/calc.png .xlsx .xlsm .xltx .xltm .xlam .xlr .xls .csv .tsv
	AddIcon ../index-theme/icons/css.png .css
	AddIcon ../index-theme/icons/deb.png .deb
	AddIcon ../index-theme/icons/doc.png .doc .docx .docm .dot .dotx .dotm .log .msg .odt .pages .rtf .tex .wpd .wps
	AddIcon ../index-theme/icons/draw.png .svg
	AddIcon ../index-theme/icons/eps.png .ai .eps
